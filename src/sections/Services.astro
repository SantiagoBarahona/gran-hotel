---
import Button from "@/atoms/Button.astro";
import Slider from "@/components/Slider.astro";

const sliderImages = [
    "/home/restaurante.avif",
    "/home/recepcion.avif",
    "/home/balcon.avif",
    "/home/cenital.avif",
    "/home/habitacion.avif",
    "/home/recepcion-2.avif",
    "/home/restaurante-2.avif",
];
---

<section class="mt-8 bg-slate-100 p-4 pb-8">
    <h2 class="text-4xl text-center mb-4">
        <span class="inline px-4"
            ><strong>Servicios</strong></span
        >
    </h2>
    <p class="text-sm md:text-center text-gray-700 mb-4">
        Desde habitaciones elegantes y gastronomía de primer nivel hasta
        gimnasio, piscina y salones para eventos, todo está pensado para una
        estancia única.
    </p>
    <div class="sm:w-full md:w-[80%] h-auto lg:h-96 m-auto">
        <Slider imagesUrl={sliderImages} />
    </div>
    <Button href="/servicios" class="mt-4 mx-auto" style="slate"
        >Conoce nuestros servicios</Button
    >
</section>
