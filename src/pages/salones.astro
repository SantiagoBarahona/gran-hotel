---
import Layout from "@/layouts/Layout.astro";

const salonOroImages = [
    "/salones/oro/1.webp",
    "/salones/oro/2.webp",
    "/salones/oro/3.webp",
    "/salones/oro/4.webp",
];
---

<Layout title="Servicios">
    <div class="pt-20">
        <h1 class="text-center text-4xl mb-4 slide-in-lr">
            Salones de eventos
        </h1>
        <h2 class="text-center text-3xl text-red-500 mb-4 slide-in-lr">
            Salon oro
        </h2>
        <div
            class="gallery md:grid md:grid-cols-2 sm:flex sm:justify-center sm:flex-wrap max-w-4xl mx-auto [&>div]:mb-4 gap-4 px-4"
        >
            {
                salonOroImages.map((imageUrl, index) => (
                    <div class="h-46 w-full overflow-hidden">
                        <img
                            class="h-full w-full"
                            src={imageUrl}
                            loading="lazy"
                            alt={`Imagen del salon oro nÃºmero${index}`}
                        />
                    </div>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    .slide-in-lr {
        animation: slide-in-lr 0.75s ease forwards;
    }

    .gallery > div {
        width: 100%;
        height: 300px;
        background-color: #09f;
        border-radius: 0.25rem;
        animation: fade-in-bt 1s ease both;
        animation-timeline: view();
        animation-range: entry 10% cover 30%;
    }
</style>
