---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import ClientRouter from "astro/components/ClientRouter.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.avif" />
		<meta name="generator" content={Astro.generator} />
		<title>{`Gran Hotel - ${title}`}</title>
		<ClientRouter />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.js"></script>
	</body>
</html>

<style is:global>

	@font-face{
		font-family: "Raleway";
		src: url("/fonts/Raleway-Regular.woff2");
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family:
			"Raleway",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-size: 16px;
		font-style: normal;
	}

	@keyframes fade-in-lr {
		from {
			transform: translateX(-100px);
			opacity: 0;
		}
		to {
			transform: translateX(0);
			opacity: 1;
		}
	}

	@keyframes fade-in-bt {
		from {
			opacity: 0;
			transform: translateY(100px);
		}

		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slide-in-lr {
		from {
			opacity: 0;
			transform: translateX(-100px);
		}

		to {
			opacity: 1;
			transform: translateX(0);
		}
	}
</style>
