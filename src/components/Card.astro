---
import Button from '@/atoms/Button.astro';

interface Props {
    title: string;
    description: string;
    action?: string
}

const { title, description, action } = Astro.props;
---

<div class="border-2 bg-gray-100 border-slate-300 shadow-md shadow-slate-400 border-solid rounded-lg p-4">
    <div class="flex items-center gap-x-4 mb-2">
        <slot name="icon"/>
        <h3 class="text-2xl"><strong>{title}</strong></h3>
    </div>
    <div>
        <p class="text-slate-600">{description}</p>
        { action && <Button>{action}</Button> }
    </div>
</div>
