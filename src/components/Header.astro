---
import Logo from "./Logo.astro";
import SocialNetworks from "./SocialNetworks.astro";

const currentPathname = Astro.url.pathname;

const links = [
    {
        label: "Inicio",
        url: "/",
    },
    {
        label: "Habitaciones",
        url: "/habitaciones",
    },
    {
        label: "Servicios",
        url: "/servicios",
    },
    {
        label: "Salones para eventos",
        url: "/salones",
    },
    {
        label: "Quienes somos",
        url: "/historia",
    },
];

console.log(currentPathname);
---

<header class="flex w-screen lg:justify-between px-2 z-50 fixed">
    <div class="py-1">
        <Logo width="40px" height="40px" />
    </div>
    <nav class="flex items-center md:flex-grow md:justify-center">
        <label for="menu-toggle" class="menu-icon text-white scale-150"
            >&#9776;</label
        >
        <input type="checkbox" id="menu-toggle" class="hidden" />
        <ul
            class="md:flex text-sm [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2 main-ul h-full items-center"
        >
            {
                links.map((link) => (
                    <li>
                        <a
                            href={link.url}
                            class:list={[
                                "z-10 h-full",
                                currentPathname == link.url ? "active" : "",
                            ]}
                        >
                            {link.label}
                        </a>
                        <div class="background" />
                    </li>
                ))
            }
        </ul>
    </nav>
    <div class="lg:flex items-center hidden">
        <SocialNetworks />
    </div>
</header>

<style>
    header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 30px #000;
        background-color: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(2px);
    }

    .main-ul > li {
        display: flex;
        align-items: center;
        position: relative;
        color: #ccc;
        transition: color .25s;
        height: 100%;
        min-width: fit-content;
    }

    .main-ul > li:hover{
        color: #fff;
        transition: color 0s;
    }

    .background {
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(221, 221, 221, 20%) 0%,
            transparent 100%
        );
        transition: opacity 500ms;
        opacity: 0;
        top: 0;
        z-index: -10;
    }

    li:hover .background {
        opacity: 1;
        transition-duration: 100ms;
    }

    .active {
        color: #fff;
        border-bottom: solid 2px red;
    }

    .menu-icon {
        display: none;
    }

    @media (max-width: 768px) {
        header {
            justify-content: space-between;
        }

        .main-ul {
            display: none;
            flex-direction: column;
            position: absolute;
            width: 100%;
            right: 1;
        }

        .main-ul > li {
            width: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(5px);
        }

        a {
            margin: auto;
            height: 100%;
            text-align: center;
        }

        #menu-toggle:checked ~ ul.main-ul {
            display: flex;
            left: 0;
            margin-top: 7.25rem;
        }

        .menu-icon {
            display: block;
        }
    }
</style>
