---
interface Props {
  title: string;
  imagesUrl: string[];
}

const { title, imagesUrl } = Astro.props;
---

<h2 class="text-center text-3xl text-red-500 mb-4 slide-in-lr">{title}</h2>
<div
  class="gallery grid sm:grid-cols-2 lg:grid-cols-3 mx-auto [&>div]:mb-4 gap-4 px-4 mb-8"
>
  {
    imagesUrl.map((imageUrl, index) => (
      <div class="h-46 w-full shadow-md overflow-hidden shadow-gray-500">
        <img
          class="w-full h-full object-cover"
          src={imageUrl}
          loading="lazy"
          alt={`${title}, imagen nÃºmero ${index}`}
        />
      </div>
    ))
  }
</div>

<style>
  .slide-in-lr {
    animation: slide-in-lr 0.75s ease forwards;
  }

  .gallery > div {
    width: 100%;
    height: 300px;
    animation: fade-in-bt 1s ease both;
    animation-timeline: view();
    animation-range: entry 10% cover 20%;
  }
</style>
