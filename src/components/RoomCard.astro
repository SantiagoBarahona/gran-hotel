---
import Bed from "@/atoms/icons/Bed.astro";
import Person from "@/atoms/icons/Person.astro";

interface Props {
    title: string;
    capacity: number;
    beds: number[];
    imageSrc: string;
}

const { title, capacity, imageSrc, beds } = Astro.props;
---

<div
    class="card border-2 border-solid border-slate-300 p-6 pt-14 m-4 shadow-md shadow-gray-800 relative transition-colors duration-300 hover:bg-gray-950/90 hover:text-white"
>
    <div
        class="transition-transform duration-1000 hover:-translate-y-4 relative z-40"
    >
        <div class="mb-4 h-48 w-full rounded-sm shadow-sm shadow-slate-400">
            <img
                src={imageSrc}
                class="w-full h-full object-cover object-center"
                loading="lazy"
                alt={`${title}`}
            />
        </div>
        <div>
            <div>
                <h3 class="text-2xl text-center">{title}</h3>
                <div class="flex justify-center gap-x-4">
                    <i class="flex items-center"
                        ><Person /> <span class="text-2xl">{capacity}</span></i
                    >
                    <div class="flex gap-x-1">
                        {
                            beds.map((numberOfBeds, index) => (
                                <>
                                    <i class="flex items-center">
                                        <Bed />{" "}
                                        <span class="text-2xl">
                                            {numberOfBeds}
                                        </span>
                                    </i>
                                    {index < beds.length - 1 && (
                                        <span class="mt-1">รณ</span>
                                    )}
                                </>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="corner top-2 left-2 border-t-2 border-l-2"></div>
    <div class="corner top-2 right-2 border-t-2 border-r-2"></div>
    <div class="corner bottom-2 left-2 border-b-2 border-l-2"></div>
    <div class="corner bottom-2 right-2 border-b-2 border-r-2"></div>
</div>

<style>
    .corner {
        border-color: #000;
        border-style: solid;
        position: absolute;
        width: 2rem;
        height: 2rem;
        transition-property: width, height, border-color;
        transition: 700ms ease;
    }

    .card:hover .corner {
        border-color: #fff;
        width: 50%;
        height: 50%;
    }
</style>
